<div class="container" style="height: 500px">
	<div class="row" style="margin-top: 125px">
		<div class="col-xs-6 col-md-offset-2" >
		

				<%= bootstrap_form_for([@driver, Car.new]) do |f| %>

				<%= f.text_field :make, label: 'Car Make'%> <br>
				<%= f.text_field :model, label: 'Car Model' %> <br>
				<%= f.text_field :vehicle_reg, label: 'Registration Number' %> <br>

				<%= f.submit "Register New Car", class: 'btn btn-outline' %>

				<% end %>
	
		</div>
	</div>
</div>



