<% invoices.each do |i| %>
  <p>
    <strong><%= i.created_at.strftime("%Y-%m-%d") %></strong><br>
    <i style="font-style: italic"> <%= i.attachment.file.filename %></i><br>
  </p>
    <%= link_to "View", i.attachment_url, target: :_blank, class: "btn btn-outline-primary" %>
      
      <% if admin_logged_in? %>
        <%= link_to "Delete",driver_invoice_path(i.id), method: :delete, class: "btn btn-outline-danger", data: {confirm: "Are you sure that you wish to delete #{i.attachment.file.filename}?", disable_with: "Deleting..." }%>
      <% end %>
    <hr>

    <% end %> 

<div style="text-align: center">
  <% if invoices.count > 2  %>
    <%= link_to "See Older",driver_invoices_path(@driver.id), class: "btn btn-outline" %>  
  <% end %>
</div>
