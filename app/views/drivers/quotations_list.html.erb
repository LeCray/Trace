<% quotations.each do |q| %>
  <p>
    <strong><%= q.created_at.strftime("%Y-%m-%d") %></strong><br>
    <i style="font-style: italic"> <%= q.attachment.file.filename %></i><br>
  </p>
    <%= link_to "View", q.attachment_url, target: :_blank, class: "btn btn-outline-primary" %>
      
      <% if admin_logged_in? %>
        <%= link_to "Delete",driver_quotation_path(q.id), method: :delete, class: "btn btn-outline-danger", data: {confirm: "Are you sure that you wish to delete #{q.attachment.file.filename}?", disable_with: "Deleting..." }%>
      <% end %>
    <hr>

    <% end %> 

<div style="text-align: center">
  <% if quotations.count > 2  %>
    <%= link_to "See Older",driver_quotations_path(@driver.id), class: "btn btn-outline" %>  
  <% end %>
</div>
