<% if !@car.errors.empty? %>
   <div class = "alert alert-error">
      
      <ul>
         <% @car.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
         <% end %>
      </ul>
      
   </div>
<% end %>

<div class = "well">
    <p style="display: inline-block">Select Vehicle </p>
    <select id="vehicle-reg" selected="selected" style="width: 200px; margin-left: 10px; display: inline-block">
        <% @all_cars.each do |c| %>
            <option value="#{c.vehicle_reg}"><%= c.vehicle_reg %></option>
        <% end %>
    </select><br>

    <p style="display: inline-block">Service Status</p>
    <select id="car-status" style="width: 200px; margin-left: 10px; display: inline-block">
        <option value="1">IN MAINTENANCE BAY</option>
        <option value="2">IN WASH BAY</option>  
        <option value="3">READY FOR COLLECTION</option>
        <option value="4">None</option>
    </select>
    <br>

    <div id="button">
        <button id="notifyDriverBtn" class="btn btn-outline" > Notify Driver </button>
    </div>
</div>


