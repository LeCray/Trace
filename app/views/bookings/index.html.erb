<div class="container-fluid" style="background-color: #262626; height: 1000px">
	<div class="container">
		
		<div class="row" style="margin-top: 130px;">
			<div class="col-lg-offset-2">
			 	<%= link_to driver_path(@driver.id), class: 'btn btn-outline-warning' do %>
			  		 Back
				<% end %>
			</div>
        </div>

        <div class="row" >
			<div class="col-xs-12 col-lg-8 col-lg-offset-2" 
				style="	background-color: #404040; padding: 20px;  border-radius: 3px;"> 
	         
				<h3 id="cards-heading">
					BOOKINGS
				</h3>
				<div id="bookings">

					<% @bookings.each do |b| %>
					  <p><strong>  <%= b.date %></strong> at <strong><%= b.time.strftime("%I:%M")  %></strong><br>
					    <strong><%= b.make %> <%= b.model %></strong><br>
					    <i style="font-style: italic"><%= b.description %></i>  
					    
					  </p>
				
					  <hr>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>    