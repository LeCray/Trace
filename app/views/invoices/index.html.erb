
<div class="container" style="padding-top: 100px">
	<div class="col-xs-9 col-md-offset-1">

	<% if !flash[:notice].blank? %>
	   <div class = "alert alert-info">
	      <%= flash[:notice] %>
	   </div>
	<% end %>

	<br />

	<%= link_to "Back To Driver", driver_path(@driver.id), class: "btn btn-outline-danger" %>
	<br />
	<br />

	<table class = "table table-striped">
	   <thead>.
	      <tr>
	         <th>CREATED AT</th>
	         <th>DESCRIPTION</th>
	         <th></th>
	      </tr>
	   </thead>
	   
	   <tbody>
	      <% @invoices.each do |invoice| %>
	         
	         <tr>
	            <td><%= invoice.created_at.strftime("%Y-%m-%d, %X") %></td>
	            <td><%= invoice.attachment.file.filename %></td>
	            <td><%= link_to "View Invoice", invoice.attachment_url %></td>
	         </tr>
	         
	      <% end %>
	   </tbody>
	   
	</table>
	<div style="text-align: center">
		<%= will_paginate @invoices, renderer: BootstrapPagination::Rails %>
	</div>
</div>
